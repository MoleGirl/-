<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#be3131"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="28dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:onClick="back"
            android:src="@drawable/back2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:text="设置"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:padding="10dp"
            
            >

            <TextView
                android:id="@+id/shezhi_pass"
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:onClick="lin"
                android:textSize="18dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="修 改 密 码" />
            
            <LinearLayout 
                android:visibility="gone"
                android:id="@+id/shezhi_lin1"
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <EditText 
                    android:id="@+id/shezhi_pass1"
                    android:padding="5dp"
                    android:background="@drawable/act_login_et"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入原始密码"
                    />
                <EditText 
                    android:id="@+id/shezhi_pass2"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:background="@drawable/act_login_et"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入新密码"
                    />
                <EditText 
                    android:id="@+id/shezhi_pass3"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:background="@drawable/act_login_et"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="请再次输入新密码"
                    />
                <Button
                    android:onClick="onClick1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:background="@drawable/act_login_but" 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确定"
                    />
                
            </LinearLayout>
            

            <TextView
			    android:onClick="lin"
			    android:clickable="true"
                android:id="@+id/shezhi_nickname"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="修 改 昵 称" />
			<LinearLayout 
			    android:visibility="gone"
			    android:id="@+id/shezhi_lin2"
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
               
                <EditText 
                	android:id="@+id/shezhi_nickname1"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:background="@drawable/act_login_et"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入新的昵称"
                    />
                <Button
                    android:onClick="onClick2"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:background="@drawable/act_login_but" 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确定"
                    />
                
            </LinearLayout>
            
            <TextView
                android:layout_marginTop="30dp"
                android:textSize="18dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="退 出 当 前 账 号" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>